  "homepage": "https://github.com/asnewman/filosopher-api#readme",
  "devDependencies": {
    "husky": "^4.2.5",
    "newman": "^5.1.0",
    "nodemon": "^2.0.4",
    "semistandard": "^14.2.0"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^15.1.0",
    "jest": "^26.0.1",
    "jsonwebtoken": "^8.5.1",
